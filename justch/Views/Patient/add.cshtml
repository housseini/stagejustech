@using justch.Models.ENTITIES
@model Patient;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row">
    <div  class="col-sm-4 col-3" >


   <h4 class="page-title">  Ajout Patient </h4> 
    </div>
    <div class="col-sm-8 col-9 text-right m-b-20">
         <a href="/Patient/Index" class="btn btn-primary  submit-btn">retour</a>
  </div>
</div>

<div asp-validation-summary=All>
</div>
<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <form id="form">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Nom </label>
                        <input class="form-control"id="FirstName" type="text">
                        <label class="text-danger" id="e"> saisir le Nom

                        </label>
                        

                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Prénom</label>
                        <input class="form-control"  id="LastName" type="text">
                         <label class="text-danger" id="f"> saisir le Prenom

                        </label>


                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Date de naissance</label>
                        <div class="cal-icon">
                            <input type="text"  id="Dataofbirth" class="form-control datetimepicker">
                             <label class="text-danger" id="gdf"> la date est obligatoire
                             
                             </label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Lieu de naissance <span></span></label>
                        <input id="Placeofbirth"  class="form-control" type="text">
                         <label class="text-danger" id="h"> lieu de naissance  est obligatoire
                             
                        </label>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group gender-select">
                        <label class="gen-label">Gender</label>
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                <input type="radio" id="Gender" value="Homme" name="gender" class="form-check-input">Homme
                            </label>
                        </div>
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                <input type="radio" id="Gender" value="Femme" name="gender" class="form-check-input">Femme
                            </label>
                        </div>
                         <label class="text-danger" id="l">  genre est obligatoire

                        </label>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group gender-select">
                        <label class="gen-label">Civilité</label>
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                <input id="Civility" type="radio" value="Mr" name="Civility" class="form-check-input">Mr
                            </label>
                        </div>
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                <input type="radio" id="Civility" value="Mme" name="Civility" class="form-check-input">Mme
                            </label>
                        </div>
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                <input type="radio" id="Civility" value="Mlle" name="Civility" class="form-check-input">Mlle
                            </label>
                        </div>
                        <label class="text-danger" id="m">  Civility est obligatoire

                        </label>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>CIN / Passport</label>
                        
                        <input  id="Cin" class="form-control" type="text">
                        <label class="text-danger" id="d"> saisir le cin

                        </label>
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Address</label>
                                <input id="Address" type="text" class="form-control ">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Code Postal</label>
                                <input id="PostalCode" type="number" class="form-control ">
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4">
                            <div class="form-group">
                                <label>Country</label>
                                <select id="Country" class="form-control select">
                                    @foreach (var item in ViewBag.countrys)
                                    {
                                        <option value=@item>@item</option>

                                    }


                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4">
                            <div class="form-group">
                                <label>City</label>
                                <input id="City" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6 col-lg-4">
                            <div class="form-group">
                                <label>Nationalité</label>
                                <select id="Nationality" class="form-control select">
                                    @foreach (var item in ViewBag.nationnalite)
                                    {
                                        <option value=@item>@item</option>
                                    }

                                </select>
                                  <label class="text-danger" id="j">  le telephone est obligatoire

                        </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label>Profession </label>
                        <input id="Profession" class="form-control" type="text">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Email <span class="text-danger">*</span></label>
                        <input id="Email" class="form-control" type="email">
                          <label class="text-danger" id="k">  l'email est obligatoire

                        </label>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>telephone </label>
                        <input id="Phone" class="form-control" type="text">
                         <label class="text-danger" id="i">  le telephone est obligatoire Et doit contenir que de numerique     

                        </label>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Avatar</label>
                        <div class="profile-upload">
                            <div class="upload-img">
                                <img alt="" src="~/img/user.jpg">
                            </div>
                            <div class="upload-input">
                                <input id="Photo" type="file"  value=0 class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="m-t-20 text-center">
                <button type="button" id="btnadd" class="btn btn-primary submit-btn" title="ajouter le patient " onclick="AddPatient()">Créer Patient</button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
<script src="~/js/site.js" asp-append-version=true>


</script>
<partial name="_ValidationScriptsPartial" />

             }
