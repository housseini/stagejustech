@using justch.Models.ENTITIES
@model Patient;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="row">
    <div class="col-sm-7 col-6">
        <h4 class="page-title">MODIFIER  Patient(s)</h4>
    </div>

    <div class="col-sm-5 col-6 text-right m-b-30">

        <a href="#" onclick="retour()" class="btn btn-primary"><i class="fa fa-back"></i>  retour </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <form id="form">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Nom </label>
                        <input class="form-control" id="FirstName" value=@ViewBag.Patient.FirstName type="text">

                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Prénom</label>
                        <input class="form-control" id="LastName" value=@ViewBag.Patient.LastName type="text">


                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label> SurNom </label>
                        <input id="MaidenName" value=@ViewBag.Patient.MaidenName class="form-control" type="text">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Date de naissance</label>
                        <div class="cal-icon">
                            <input type="text" id="Dataofbirth" value=@ViewBag.Patient.Dataofbirth class="form-control datetimepicker">

                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Lieu de naissance <span></span></label>
                        <input id="Placeofbirth" value=@ViewBag.Patient.Placeofbirth asp-for="Placeofbirth" class="form-control" type="text">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group gender-select">
                        <label class="gen-label">Gender</label>
                        <div class="form-check-inline">
                            <label class="form-check-label">

                                @{
                                    var checke8 = "";
                                    if (ViewBag.Patient.Gender == "Homme")
                                        checke8 = "checked";
                                }
                                <input type="radio" name="gender" id="Gender" value="Homme" class="form-check-input" @checke8>Homme
                            </label>
                        </div>
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                @{
                                    var checke9 = "";
                                    if (ViewBag.Patient.Gender == "Femme")
                                        checke9 = "checked";
                                }
                                <input type="radio" name="gender" value="Femme" class="form-check-input" @checke9>Femme
                            </label>
                        </div>
                    </div>

                </div>

                <div class="col-sm-6">
                    <div class="form-group gender-select">
                        <label class="gen-label">Civilité</label>
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                @{
                                    var checke = "";
                                    if (ViewBag.Patient.Civility == "Mr")
                                    { checke = "checked"; }
                                }
                                <input type="radio" id="Civility" name="civility" value="Mr" class="form-check-input" @checke>Mr
                            </label>
                        </div>
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                @{
                                    var checke2 = "";
                                    if (ViewBag.Patient.Civility == "Mme")
                                    {
                                        checke2 = "checked";
                                    }


                                }
                                <input type="radio" id="Civility" name="civility" value="Mme" class="form-check-input" @checke2>Mme
                            </label>
                        </div>
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                @{
                                    var checke3 = "";
                                    if (ViewBag.Patient.Civility == "Mlle")
                                    { checke3 = "checked"; }
                                }
                                <input type="radio" id="Civility" value="Mlle" name="civility" class="form-check-input" @checke3>Mlle
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>CIN / Passport<span class="text-danger">*</span></label>
                        <input id="Cin" value=@ViewBag.Patient.Cin class="form-control" type="text">
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Address</label>
                                <input id="Address" value=@ViewBag.Patient.Address type="text" class="form-control ">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Code Postal</label>
                                <input id="PostalCode" value=@ViewBag.Patient.PostalCode type="number" class="form-control ">
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4">
                            <div class="form-group">
                                <label>Country</label>
                                <select id="Country" value=@ViewBag.Patient.Country class="form-control select">
                                    <option value=@ViewBag.Patient.Country> @ViewBag.Patient.Country </option>
                                    @foreach (var item in ViewBag.countrys)
                                    {


                                        <option value=@item>@item</option>

                                    }


                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-4">
                            <div class="form-group">
                                <label>City</label>
                                <input id="City" type="text" value=@ViewBag.Patient.City class="form-control">
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6 col-lg-4">
                            <div class="form-group">
                                <label>Nationalité</label>
                                <select id="Nationality" value=@ViewBag.Patient.Nationality class="form-control select">
                                    <option value=@ViewBag.Patient.Nationality> @ViewBag.Patient.Nationality </option>
                                    @foreach (var item in ViewBag.nationnalite)
                                    {
                                        <option value=@item>@item</option>
                                    }

                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <label>Profession </label>
                        <input id="Profession" value=@ViewBag.Patient.Profession class="form-control" type="text">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Email </label>
                        <input id="Email" value=@ViewBag.Patient.Email class="form-control" type="email">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>telephone </label>
                        <input id="Phone" value=@ViewBag.Patient.Phone class="form-control" type="text">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Avatar</label>
                        <div class="profile-upload">
                            <div class="upload-img">
                                <img alt="" src="~/img/user.jpg">
                            </div>
                            <div class="upload-input">
                                <input id="Photo1" value=@ViewBag.Patient.Photo type="file" class="form-control">
                            </div>
                            <div id="trr" class="upload-input">
                                <input id="Photo" value=@ViewBag.Patient.Photo type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>IssuedOn</label>
                        <input id="IssuedOn" value=@ViewBag.Patient.IssuedOn class="form-control" type="text">
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="form-group">
                        <label>InsuranceAgency</label>
                        <input id="InsuranceAgency" value=@ViewBag.Patient.InsuranceAgency class="form-control" type="text">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>InsuranceID </label>
                        <input id="InsuranceID" value=@ViewBag.Patient.InsuranceID class="form-control" type="text">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>State </label>
                        <input id="State" value=@ViewBag.Patient.State class="form-control" type="text">
                    </div>
                </div>


            </div>

            <div class="m-t-20 text-center">
                <button class="btn btn-primary submit-btn" onclick="edd_Patient(@ViewBag.Patient.Id)" title="sauvegarder les modificatins "> Sauvegarder </button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="~/js/site.js" asp-append-version=true>


    </script>
}